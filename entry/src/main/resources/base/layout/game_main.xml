<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:alignment="center"
    ohos:background_element="$media:background">
    <Image
        ohos:height="120vp"
        ohos:width="match_content"
        ohos:image_src="$media:title_icon"
        />
    <Button
        ohos:id="$+id:start_game"
        ohos:top_padding="$float:componentPadding"
        ohos:bottom_padding="$float:componentPadding"
        ohos:height="112vp"
        ohos:width="match_content"
        ohos:text_color="white"
        ohos:text="$string:start_game"
        ohos:layout_alignment="center"
        ohos:text_size="35vp"/>
    <Button
        ohos:id="$+id:rank_list"
        ohos:top_padding="$float:componentPadding"
        ohos:bottom_padding="$float:componentPadding"
        ohos:height="112vp"
        ohos:width="match_content"
        ohos:text_color="white"
        ohos:text="$string:open_rank_list"
        ohos:layout_alignment="center"
        ohos:text_size="35vp"/>
    <Button
        ohos:id="$+id:exit"
        ohos:top_padding="$float:componentPadding"
        ohos:bottom_padding="$float:componentPadding"
        ohos:height="112vp"
        ohos:width="match_content"
        ohos:text_color="white"
        ohos:text="$string:exit"
        ohos:layout_alignment="center"
        ohos:text_size="35vp"/>
</DirectionalLayout>