<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:background_element="$color:colorSubBackground">
    <include
        ohos:id="$+id:enrol_title"
        ohos:height="$float:defaultHeight"
        ohos:width="match_parent"
        ohos:layout="$layout:enrol_title"
        ohos:align_parent_top="true"
        />
    <ScrollView
        ohos:id="$+id:view"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:below="$id:enrol_title"
        ohos:bottom_margin="56vp"
        ohos:orientation="vertical"
        ohos:top_margin="108vp">
        <DirectionalLayout
            ohos:id="$+id:direction_1"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:background_element="$color:colorSubBackground"
            ohos:orientation="vertical">
            <DirectionalLayout
                ohos:height="56vp"
                ohos:width="match_parent"
                ohos:background_element="$color:colorSubBackground"
                ohos:orientation="horizontal">
                <TextField
                    ohos:id="$+id:phone_number"
                    ohos:height="56vp"
                    ohos:width="match_content"
                    ohos:hint="$string:phone_number"
                    ohos:bottom_padding="4vp"
                    ohos:element_cursor_bubble="#00000000"
                    ohos:end_margin="$float:defaultMargin"
                    ohos:end_padding="$float:defaultPadding"
                    ohos:multiple_lines="false"
                    ohos:start_margin="$float:defaultMargin"
                    ohos:start_padding="$float:defaultPadding"
                    ohos:text_alignment="bottom"
                    ohos:text_input_type="pattern_text"
                    ohos:text_size="$float:default_text_size"
                    ohos:top_padding="$float:componentPadding"
                    ohos:vertical_center="true"
                    ohos:weight="6"
                    />
                <Button
                    ohos:top_padding="$float:componentPadding"
                    ohos:id="$+id:send_verify_code"
                    ohos:height="56vp"
                    ohos:width="match_content"
                    ohos:text="$string:send_verify_code"
                    ohos:text_size="$float:default_text_size"
                    ohos:shape="rectangle"
                    ohos:weight="2.5"
                    ohos:alignment="center|right"
                    ohos:bottom_margin="$float:maxMargin"
                    ohos:end_margin="$float:maxMargin"
                    ohos:start_margin="$float:maxMargin"
                    />
            </DirectionalLayout>
            <DirectionalLayout
                ohos:id="$+id:direction_2"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:background_element="$color:colorSubBackground">
                <TextField
                    ohos:id="$+id:verify_code"
                    ohos:height="56vp"
                    ohos:width="match_parent"
                    ohos:bottom_padding="4vp"
                    ohos:element_cursor_bubble="#00000000"
                    ohos:end_margin="$float:defaultMargin"
                    ohos:end_padding="$float:defaultPadding"
                    ohos:hint="$string:verify_code"
                    ohos:multiple_lines="false"
                    ohos:start_margin="$float:defaultMargin"
                    ohos:start_padding="$float:defaultPadding"
                    ohos:text_alignment="bottom"
                    ohos:text_input_type="pattern_text"
                    ohos:text_size="$float:default_text_size"
                    ohos:top_margin="$float:defaultMargin"
                    ohos:top_padding="$float:componentPadding"
                    ohos:vertical_center="true"/>
            </DirectionalLayout>
            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:background_element="$color:colorSubBackground">
                <Text
                    ohos:id="$+id:valid_verify_code"
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:bottom_padding="4vp"
                    ohos:element_cursor_bubble="#00000000"
                    ohos:end_margin="$float:defaultMargin"
                    ohos:end_padding="$float:defaultPadding"
                    ohos:multiple_lines="true"
                    ohos:start_margin="$float:defaultMargin"
                    ohos:start_padding="$float:defaultPadding"
                    ohos:text="$string:false_verify_code"
                    ohos:text_alignment="bottom"
                    ohos:text_color="red"
                    ohos:text_input_type="pattern_text"
                    ohos:text_size="14fp"
                    ohos:top_padding="$float:componentPadding"
                    ohos:vertical_center="true"
                    ohos:visibility="hide"/>

                <TextField
                    ohos:id="$+id:passwordCreate"
                    ohos:height="56vp"
                    ohos:width="match_parent"
                    ohos:bottom_padding="4vp"
                    ohos:element_cursor_bubble="#00000000"
                    ohos:end_margin="$float:defaultMargin"
                    ohos:end_padding="$float:defaultPadding"
                    ohos:hint="$string:password"
                    ohos:multiple_lines="false"
                    ohos:start_margin="$float:defaultMargin"
                    ohos:start_padding="$float:defaultPadding"
                    ohos:text_alignment="bottom"
                    ohos:text_input_type="pattern_text"
                    ohos:text_size="$float:default_text_size"
                    ohos:top_margin="$float:defaultMargin"
                    ohos:top_padding="$float:componentPadding"
                    ohos:vertical_center="true"/>
            </DirectionalLayout>
        </DirectionalLayout>
    </ScrollView>
    <Button
        ohos:id="$+id:submitButton"
        ohos:height="40vp"
        ohos:width="match_parent"
        ohos:background_element="$graphic:background_login"
        ohos:bottom_margin="$float:maxMargin"
        ohos:end_margin="$float:maxMargin"
        ohos:start_margin="$float:maxMargin"
        ohos:text="$string:enrol"
        ohos:text_alignment="center"
        ohos:text_color="#F2FFFFFF"
        ohos:text_size="$float:default_text_size"
        ohos:top_margin="20vp"
        ohos:below="$id:view"/>
</DependentLayout>